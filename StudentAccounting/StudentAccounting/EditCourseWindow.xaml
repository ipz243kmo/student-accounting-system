<Window x:Class="StudentAccounting.EditCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати курс" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Назва курсу -->
        <TextBlock Text="Назва курсу:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CourseNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- Факультет -->
        <TextBlock Text="Факультет:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="FacultyTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!-- Департамент -->
        <TextBlock Text="Департамент:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="DepartmentTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <!-- Кількість студентів -->
        <TextBlock Text="К-сть студентів:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="StudentsCountTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <!-- Кнопка зберегти -->
        <Button Content="Зберегти" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Width="100" Margin="5"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
