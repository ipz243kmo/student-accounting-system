<Window x:Class="StudentAccounting.FacultyEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати факультет" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Назва факультету -->
            <RowDefinition Height="*"/>
            <!-- Кафедри -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Назва факультету -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Назва факультету:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="FacultyNameTextBox"/>

        <!-- DataGrid кафедр -->
        <DataGrid Grid.Row="1" Grid.ColumnSpan="2" Name="DepartmentsDataGrid" AutoGenerateColumns="False" CanUserAddRows="True" Margin="0,10,0,10"
                  RowEditEnding="DepartmentsDataGrid_RowEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Кафедра" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки Зберегти / Скасувати -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Зберегти" Width="80" Margin="0,0,5,0" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
