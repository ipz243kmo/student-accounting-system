<Window x:Class="StudentAccounting.FacultyAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати факультет"
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Назва факультету -->
        <TextBlock Text="Факультет:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="FacultyNameTextBox" Grid.Row="0" Grid.Column="1"/>

        <!-- Кафедра -->
        <TextBlock Text="Кафедра:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBox x:Name="DepartmentTextBox" Width="200"/>
            <Button Content="+" Width="30" Margin="5,0,0,0" Click="AddDepartment_Click"/>
        </StackPanel>

        <!-- Список кафедр -->
        <DataGrid x:Name="DepartmentsDataGrid"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Кафедра" Binding="{Binding}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Зберегти" Width="90" Margin="0,0,5,0" Click="Save_Click"/>
            <Button Content="Скасувати" Width="90" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
