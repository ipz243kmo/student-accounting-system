<Window x:Class="StudentAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="University"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFF8F8F8">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="500">

            <!-- Заголовок -->
            <TextBlock Text="Вхід в систему університету"
                       FontFamily="Times New Roman"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Вкладки -->
            <TabControl x:Name="LoginTabControl"
                        SelectedIndex="0"
                        FontFamily="Times New Roman"
                        FontSize="16">

                <!-- Вкладка: Адміністрація -->
                <TabItem Header="Адміністрація">
                    <StackPanel Margin="20">
                        <TextBlock Text="Логін:" FontSize="17" Opacity="0.6" Margin="0,0,0,5"/>
                        <TextBox x:Name="AdminLoginTextBox" Height="35" FontSize="17" Margin="0,0,0,10"/>
                        <TextBlock Text="Пароль:" FontSize="17" Opacity="0.6" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="AdminPasswordBox" Height="35" Margin="0,0,0,10"/>

                        <!-- Кнопка для адміністрації -->
                        <Button Content="Увійти як адміністратор"
                                Width="250"
                                Height="40"
                                FontSize="18"
                                FontWeight="Bold"
                                Background="#FFA7EDED"
                                HorizontalAlignment="Center"
                                Click="AdminLoginButton_Click"/>
                    </StackPanel>
                </TabItem>

                <!-- Вкладка: Студент -->
                <TabItem Header="Студент">
                    <StackPanel Margin="20">
                        <TextBlock Text="Студент:" FontSize="17" Opacity="0.6" Margin="0,0,0,5"/>
                        <ComboBox x:Name="StudentsComboBox"
                                  Height="35"
                                  FontSize="17"
                                  DisplayMemberPath="FullName"
                                  SelectedValuePath="student_id"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Пароль:" FontSize="17" Opacity="0.6" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="StudentPasswordBox" Height="35" Margin="0,0,0,10"/>

                        <!-- Кнопка для студента -->
                        <Button Content="Увійти як студент"
                                Width="250"
                                Height="40"
                                FontSize="18"
                                FontWeight="Bold"
                                Background="#FFA7EDED"
                                HorizontalAlignment="Center"
                                Click="StudentLoginButton_Click"/>
                    </StackPanel>
                </TabItem>

            </TabControl>
        </StackPanel>
    </Grid>
</Window>
