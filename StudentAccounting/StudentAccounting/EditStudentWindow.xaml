<Window x:Class="StudentAccounting.EditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування студента" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ім'я"/>
            <TextBox x:Name="FirstNameTextBox"/>
            <TextBlock Text="Прізвище"/>
            <TextBox x:Name="LastNameTextBox"/>
            <TextBlock Text="Група"/>
            <TextBox x:Name="GroupTextBox"/>
            <TextBlock Text="Форма навчання"/>
            <ComboBox x:Name="StudyFormComboBox"/>
            <TextBlock Text="Фінансування"/>
            <ComboBox x:Name="FundingComboBox"/>
            <TextBlock Text="Факультет"/>
            <ComboBox x:Name="FacultyComboBox" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            <TextBlock Text="Департамент"/>
            <ComboBox x:Name="DepartmentComboBox" DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Зберегти" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
