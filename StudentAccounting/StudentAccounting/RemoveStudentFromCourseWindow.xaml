<Window x:Class="StudentAccounting.RemoveStudentFromCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Видалити студента з курсу"
        Height="360" Width="480"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Факультет -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Факультет:"/>
            <ComboBox x:Name="FacultyComboBox"
                      Height="25"
                      SelectionChanged="FacultyComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Група -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Група:"/>
            <ComboBox x:Name="GroupComboBox"
                      Height="25"
                      SelectionChanged="GroupComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Студент -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Студент:"/>
            <ComboBox x:Name="StudentsComboBox"
          DisplayMemberPath="DisplayName"
          SelectionChanged="StudentsComboBox_SelectionChanged"/>


        </StackPanel>

        <!-- Курс -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Курс:"/>
            <ComboBox x:Name="CourseComboBox"
                      Height="25"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Видалити"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="RemoveButton_Click"/>
            <Button Content="Скасувати"
                    Width="90"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
