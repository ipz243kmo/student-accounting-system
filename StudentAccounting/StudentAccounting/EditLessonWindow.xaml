<Window x:Class="StudentAccounting.EditLessonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати пару" Height="350" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Група:" VerticalAlignment="Center"/>
        <ComboBox x:Name="GroupComboBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="День:" VerticalAlignment="Center"/>
        <ComboBox x:Name="DayComboBox" Grid.Row="1" Grid.Column="1" Margin="5">
            <ComboBoxItem>Понеділок</ComboBoxItem>
            <ComboBoxItem>Вівторок</ComboBoxItem>
            <ComboBoxItem>Середа</ComboBoxItem>
            <ComboBoxItem>Четвер</ComboBoxItem>
            <ComboBoxItem>П'ятниця</ComboBoxItem>
            <ComboBoxItem>Субота</ComboBoxItem>
            <ComboBoxItem>Неділя</ComboBoxItem>
        </ComboBox>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Час початку:" VerticalAlignment="Center"/>
        <TextBox x:Name="StartTimeTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Час закінчення:" VerticalAlignment="Center"/>
        <TextBox x:Name="EndTimeTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Предмет:" VerticalAlignment="Center"/>
        <TextBox x:Name="SubjectTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Аудиторія:" VerticalAlignment="Center"/>
        <TextBox x:Name="RoomTextBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Скасувати" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
