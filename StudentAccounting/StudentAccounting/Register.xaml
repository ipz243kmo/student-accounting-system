<Window x:Class="StudentAccounting.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мій університет"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFF8F8F8">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    Width="900">

            <!-- Заголовок -->
            <TextBlock Text="Мій університет"
                       FontFamily="Times New Roman"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Вкладки -->
            <TabControl FontFamily="Times New Roman"
                        FontSize="18"
                        Height="600">

                <TabItem Header="Інформація про навчання">
                    <StackPanel Margin="20">
                        <!-- Інформація про студента -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ПІБ:" FontSize="18" Grid.Row="0"/>
                            <TextBlock x:Name="FullNameTextBlock" FontSize="18" Grid.Row="0" Grid.Column="1"/>

                            <TextBlock Text="Факультет:" FontSize="18" Grid.Row="1"/>
                            <TextBlock x:Name="FacultyTextBlock" FontSize="18" Grid.Row="1" Grid.Column="1"/>

                            <TextBlock Text="Освітній ступінь:" FontSize="18" Grid.Row="2"/>
                            <TextBlock x:Name="DegreeTextBlock" FontSize="18" Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Форма навчання:" FontSize="18" Grid.Row="3"/>
                            <TextBlock x:Name="StudyFormTextBlock" FontSize="18" Grid.Row="3" Grid.Column="1"/>

                            <TextBlock Text="Група:" FontSize="18" Grid.Row="4"/>
                            <TextBlock x:Name="GroupTextBlock" FontSize="18" Grid.Row="4" Grid.Column="1"/>

                            <TextBlock Text="Спеціальність:" FontSize="18" Grid.Row="5"/>
                            <TextBlock x:Name="SpecialtyTextBlock" FontSize="18" Grid.Row="5" Grid.Column="1"/>

                            <TextBlock Text="Освітня програма:" FontSize="18" Grid.Row="6"/>
                            <TextBlock x:Name="ProgramTextBlock" FontSize="18" Grid.Row="6" Grid.Column="1" TextWrapping="Wrap"/>
                        </Grid>

                        <!-- Оплата навчання -->
                        <TextBlock Text="Оплата навчання:" FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid x:Name="PaymentsDataGrid"
                  AutoGenerateColumns="False"
                  Height="250"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Сума" Binding="{Binding Amount}" Width="100"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Реквізити" Binding="{Binding Details}" Width="*"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </TabItem>

                <!-- Вкладка Розклад занять -->
                <TabItem Header="Розклад занять">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Фільтр за днем:" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox x:Name="DaysComboBox" Width="150" Height="30">
                                <ComboBoxItem Content="Понеділок"/>
                                <ComboBoxItem Content="Вівторок"/>
                                <ComboBoxItem Content="Середа"/>
                                <ComboBoxItem Content="Четвер"/>
                                <ComboBoxItem Content="П'ятниця"/>
                                <ComboBoxItem Content="Субота"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Сортувати за часом" Width="200" Margin="0,0,10,0" Click="SortScheduleByTime_Click"/>
                            <Button Content="Скинути фільтри" Width="200" Click="ResetScheduleFilters_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="ScheduleDataGrid" AutoGenerateColumns="True" Height="400"/>
                    </StackPanel>
                </TabItem>

                <!-- Аудиторії -->
                <TabItem Header="Аудиторії">
                    <StackPanel Margin="10">
                        <TextBlock Text="Фільтр за корпусом:"
                                   FontSize="16"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="BuildingsComboBox"
                                  Height="30"
                                  Width="200"
                                  Margin="0,0,0,10"/>
                        <DataGrid x:Name="ClassroomsDataGrid"
                                  AutoGenerateColumns="True"
                                  Height="400"/>
                    </StackPanel>
                </TabItem>

                <!-- Мої курси -->
                <TabItem Header="Мої курси">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Ваші курси:"
                                       FontSize="16"
                                       Margin="0,0,0,5"/>
                            <DataGrid x:Name="StudentCoursesDataGrid"
                                      AutoGenerateColumns="True"
                                      Height="400"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Записатися на курс"
                                Width="150"
                                Height="40"
                                VerticalAlignment="Center"
                                Click="EnrollButton_Click"/>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Доступні курси:"
                                       FontSize="16"
                                       Margin="0,0,0,5"/>
                            <DataGrid x:Name="AvailableCoursesDataGrid"
                                      AutoGenerateColumns="True"
                                      Height="400"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

               
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
