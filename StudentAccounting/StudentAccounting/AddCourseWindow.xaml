<Window x:Class="StudentAccounting.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати курс" Height="300" Width="400">

    <StackPanel Margin="10" VerticalAlignment="Top">

        <TextBlock Text="Назва курсу:" />
        <TextBox x:Name="CourseNameTextBox" />

        <TextBlock Text="Кількість студентів:" Margin="0,10,0,0"/>
        <TextBox x:Name="StudentsCountTextBox" />

        <TextBlock Text="Факультет:" Margin="0,10,0,0"/>
        <ComboBox x:Name="FacultyComboBox"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectionChanged="FacultyComboBox_SelectionChanged"/>

        <TextBlock Text="Кафедра:" Margin="0,10,0,0"/>
        <ComboBox x:Name="DepartmentComboBox"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
