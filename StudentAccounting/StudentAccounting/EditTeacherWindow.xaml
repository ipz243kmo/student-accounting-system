<Window x:Class="StudentAccounting.EditTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування викладача" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Ім'я:"/>
            <TextBox x:Name="FirstNameTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Прізвище:"/>
            <TextBox x:Name="LastNameTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Посада:"/>
            <TextBox x:Name="PositionTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Предмет:"/>
            <TextBox x:Name="SubjectTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Факультет:"/>
            <ComboBox x:Name="FacultyComboBox" Width="300" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Зберегти" Width="100" Margin="0,0,10,0" Click="Save_Click"/>
                <Button Content="Скасувати" Width="100" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
